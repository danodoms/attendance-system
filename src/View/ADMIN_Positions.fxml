<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@../Style/admin_pane.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ADMIN_PositionsCTRL">
   <children>
      <Label layoutX="25.0" layoutY="26.0" text="Position">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Pane layoutX="21.0" layoutY="64.0" prefHeight="520.0" prefWidth="464.0" styleClass="tilePane">
         <children>
            <TableView fx:id="positionTable" layoutX="12.0" layoutY="48.0" onMouseClicked="#positionSelected" prefHeight="460.0" prefWidth="443.0">
              <columns>
                <TableColumn fx:id="col_id" prefWidth="36.0" text="ID" />
                <TableColumn fx:id="col_position" prefWidth="205.0" text="Position" />
                  <TableColumn fx:id="col_description" prefWidth="205.0" text="Description" />
              </columns>
            </TableView>
            <HBox layoutX="110.0" layoutY="13.0" prefHeight="18.0" prefWidth="340.0">
               <children>
                  <Label prefHeight="54.0" prefWidth="71.0" text="Department">
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </Label>
                  <ChoiceBox fx:id="departmentFilterChoiceBox" prefHeight="25.0" prefWidth="128.0" />
                  <Label prefHeight="25.0" prefWidth="52.0" text="Status">
                     <padding>
                        <Insets left="10.0" right="5.0" />
                     </padding>
                  </Label>
                  <ChoiceBox fx:id="statusFilterChoiceBox" prefHeight="25.0" prefWidth="94.0" />
               </children>
            </HBox>
         </children>
      </Pane>
      <Pane layoutX="495.0" layoutY="64.0" prefHeight="520.0" prefWidth="291.0" styleClass="tilePane">
         <children>
            <VBox layoutX="12.0" layoutY="89.0" prefHeight="330.0" prefWidth="268.0">
               <children>
                  <Label text="Position Title">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="3.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="positionTitleField">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Department">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <ChoiceBox fx:id="departmentChoiceBox" prefHeight="25.0" prefWidth="330.0">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </ChoiceBox>
                  <Label text="Description">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="positionDescTextArea" prefHeight="67.0" prefWidth="275.0">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </TextArea>
                  <VBox prefHeight="127.0" prefWidth="268.0" spacing="7.0">
                     <children>
                        <Button fx:id="addBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addPosition" prefHeight="66.0" prefWidth="268.0" text="Add Position">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="updateBtn" mnemonicParsing="false" onAction="#updatePosition" prefHeight="31.0" prefWidth="268.0" text="Update">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="deactivateBtn" mnemonicParsing="false" onAction="#deactivatePosition" prefHeight="52.0" prefWidth="268.0" text="Deactivate">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </Pane>
   </children>
</AnchorPane>
